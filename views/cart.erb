<h2>Your cart</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
  <% total_price = 0 %>
  <% total_quantity = 0 %>
  <% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i %>
    <% total_quantity += item[1].to_i %>
  <% end %>

    <tr>
      <td><b>Total:</b></td>
      <td><%= total_price %> UAH</td>
      <td><%= total_quantity %></td>
    </tr>

  </tbody>
</table>

<form action="/place_order" method="POST">

  <input name="order[order_input]" type="hidden" value="<%= @orders_input %>">

  <div class="form-group">
    <label>Name</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Your name">
  </div>

  <form action="/cart" method="POST">
  <div class="form-group">
    <label>Phone</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Your phone">
  </div>

  <form action="/cart" method="POST">
  <div class="form-group">
    <label>Address</label>
    <input name="order[address]" type="text" class="form-control" placeholder="Delivery address">
  </div>

  <button type="submit" class="btn btn-success btn-lg">Place this order!</button>

</form>

